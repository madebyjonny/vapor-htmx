<html>
  <head>
    <title>My App</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  </head>
  <body>
    <div id="app">
      <form hx-post="/form" hx-target="#result" hx-swap="innerHTML">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" placeholder="Name" />
        <button>Submit</button>
      </form>
    </div>
    <div id="result"></div>
  </body>
</html>